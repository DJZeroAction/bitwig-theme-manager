{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bitwig Theme Manager",
  "version": "0.2.2",
  "identifier": "com.bitwig-theme-manager",
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/DJZeroAction/bitwig-theme-manager/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZGNkU4RTk3MEMxRkU1RDMKUldUVDVSOE1sNDV1LzFsOWZja2w1dUpQWkNRTXlyYWphV1pzQ29qaHBkWjVqNmc0SVo4MFp1bUgK"
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bitwig Theme Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
